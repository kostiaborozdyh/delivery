<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <filter>
        <filter-name>LangFilter</filter-name>
        <filter-class>com.example.demos.web.filter.LangFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.example.demos.web.filter.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ManagerFilter</filter-name>
        <filter-class>com.example.demos.web.filter.ManagerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.example.demos.web.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>OrderFilter</filter-name>
        <filter-class>com.example.demos.web.filter.OrderFilter</filter-class>
    </filter>
    <filter>
        <filter-name>OrderListFilter</filter-name>
        <filter-class>com.example.demos.web.filter.OrderListFilter</filter-class>
    </filter>
    <filter>
        <filter-name>EditFilter</filter-name>
        <filter-class>com.example.demos.web.filter.EditFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RestoreFilter</filter-name>
        <filter-class>com.example.demos.web.filter.RestoreFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserListFilter</filter-name>
        <filter-class>com.example.demos.web.filter.UserListFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LangFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ManagerFilter</filter-name>
        <url-pattern>/man/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adm/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OrderFilter</filter-name>
        <url-pattern>/user/order.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OrderListFilter</filter-name>
        <url-pattern>/man/orderList.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EditFilter</filter-name>
        <url-pattern>/editUser.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RestoreFilter</filter-name>
        <url-pattern>/restore/restorePassword.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserListFilter</filter-name>
        <url-pattern>/adm/usersTable.jsp</url-pattern>
    </filter-mapping>
</web-app>